<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.group15_capstone">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mcs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mcs_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Group15_Capstone">
        <activity
            android:name=".View.LogIn"
            android:exported="false" />
        <activity
            android:name=".View.Checkout"
            android:exported="false" />
        <activity
            android:name=".View.ShoppingCart"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".View.Account"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".View.Product"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".View.ProductDesc"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".View.MyPurchase"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".View.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.MainMenu"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>